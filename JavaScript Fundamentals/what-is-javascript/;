<html>
	<head>
	</head>
	<body>
		<!--clicking the button will prompt user to enter text and that text will appear as button text -->
		<button type="button">Player 1</button>
		<script>
			const button = document.querySelector("button");
			button.addEventListener('click',changeButtonText);
	
			function changeButtonText(){
				const userInput = prompt("Enter a new name");
				button.textContent = userInput;
			}
		</script>
	</body>

</html>
